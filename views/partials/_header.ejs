<header>
  <h1>TinyApp</h1>
    <% if (!username) { %>
      <form class="form-inline" action="/login" method="POST">
          <div class="form-group mb-2">
            <label for="username">Username Login:</label>
            <input class="form-control" type="text" name="username" placeholder="user" style="width: 300px; margin: 1em">
            <button type="submit" class="btn btn-primary">Login</button>
          </div>
      </form>
    <% } else { %>
      <h3><%= username %></h3>
      <form method="POST" action="/logout"><button type="submit" class="btn btn-primary">Logout</button></form>
    <% }; %>
</header>